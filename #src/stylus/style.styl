$layoutWidth = 425
$mainFontSize = 20

html
  --main-font-color #000
  --main-font-family Roboto-med
  --bg #fff

@import '_nullStyle'
@import '_mixins'
@import '_header'
@import '_footer'
@import '_fonts'
@import '_general'

body
  height 100%
  color var(--main-font-color)
  font 12px var(--main-font-family)

  &.scroll-block
    overflow hidden

  button
    font-family var(--main-font-family)
    color var(--main-font-color)

.main
  padding 60px 0 0 0
  width 100%

  &__body
    >*
      margin 0 0 20px 0

    background var(--bg)

.greetings
  &__body
    text-align right
    position relative
    padding 20px 0 0 0

  &__content
    text-align left
    position absolute
    top 50%
    left 0
    transform translate(0, -50%)
    firstLevelElementsMargin 8

  &__bg-img
    width 80%

  .logo
    display inline-block

.colored-block
  background #FF9330
  padding 3px 5px 3px 5px

.section-title
  text-transform uppercase
  font-family Roboto-bl
  font-size 20px
  color #fff
  width 100%
  flex-set row nowrap

  &:before
    background #909090
    flex-grow 1
    content ''

  h2
    padding 8px 40px 8px 40px
    background #000
    word-break break-word

  &_left
    &:before
      display none

    &:after
      background #909090
      flex-grow 1
      content ''

.arrows-block
  background url('../img/bg-shadowArrow.png') repeat
  margin 10px 10px 10px 10px
  min-width 38px

  &_free
    height 50px

.offer
  flex-set row nowrap
  padding 20px 0 20px 0

  &_right
    flex-set row-reverse nowrap

    .product-block
      border-top-left-radius 30px
      border-bottom-left-radius 30px

      &:after
        border-top-right-radius 0
        border-bottom-right-radius 0
        border-top-left-radius 30px
        border-bottom-left-radius 30px

      .offer__title
        margin 0 0 0 auto

  &__body
    flex 0 1 50%

    &:after
      background #FBFBFB

  &__title
    display inline-block
    font-family Roboto-b
    font-size 15px
    padding 20px 0 3px 0
    margin 0 auto 0 0

  &__collab-brand-imgcontainer
    position relative
    img
      block-size 100%

  &__collab-brand-img
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    z-index -1

.product-block
  position relative
  flex-set column wrap
  flex-content-position center center
  flex-grow 1
  border-top-right-radius 30px
  border-bottom-right-radius 30px
  padding 5px 20px 5px 20px
  min-height 300px

  *
    z-index 2

  &:after
    box-shadow 0 0 15px rgba(0, 0, 0, 0.2)
    border-top-right-radius 30px
    border-bottom-right-radius 30px
    position absolute
    block-size 100%
    filter blur(2px)
    z-index 1
    content ''

  &_container
    flex-set row nowrap

    .product-block
      border-top-left-radius 30px
      border-bottom-left-radius 30px

      &:after
        border-top-right-radius 30px
        border-bottom-right-radius 30px

  &_container_right
    flex-set row-reverse nowrap

    .product-block
      border-top-left-radius 30px
      border-bottom-left-radius 30px

      &:after
        border-top-right-radius 0
        border-bottom-right-radius 0
        border-top-left-radius 30px
        border-bottom-left-radius 30px

.collection
  align-items center
  padding 10px 0 10px 0

  &__body
    padding 20px 20px 20px 20px

    &:after
      background #EBF5ED
      filter blur(1px)

  .collection__image
    position relative

    &:after
      position absolute
      bottom -2%
      left 50%
      transform translate(-50%, -50%)
      height 7px
      width 50%
      background #000
      content ''

  &__title-block
    padding 20px 20px 20px 20px
    text-align center
    position relative
    font-family Roboto-b
    font-size 20px
    background url('../img/bg-linesBox.jpg') no-repeat center / cover

  &__title
    position relative
    z-index 3
    display inline-block
    color #fff
    background #000
    padding 40px 8px 40px 8px
    writing-mode tb-rl
    text-transform uppercase

    &_reverse
      transform rotate(180deg)
