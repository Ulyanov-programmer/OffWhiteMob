$layoutWidth = 425
$mainFontSize = 20

html
  --main-font-color #000
  --main-font-family Roboto-med
  --bg #fff

@import '_nullStyle'
@import '_mixins'
@import '_header'
@import '_footer'
@import '_fonts'
@import '_general'

body
  height 100%
  color var(--main-font-color)
  font 12px var(--main-font-family)

  &.scroll-block
    overflow hidden

  button
    font-family var(--main-font-family)
    color var(--main-font-color)

.main
  width 100%
  height 200px

  &__body
    firstLevelElementsMargin 20
    background var(--bg)
